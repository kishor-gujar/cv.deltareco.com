@model cv.deltareco.com.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <h3 class="page-title text-danger fw-bold">
                <i class="fa fa-user-times me-2"></i> Delete User
            </h3>
        </div>

        <div class="card shadow-sm border-0" style="border-radius:12px;">
            <div class="card-body p-4">

                <h5>Are you sure you want to delete the following user?</h5>
                <ul>
                    <li><strong>Full Name:</strong> @Model.FullName</li>
                    <li><strong>Email:</strong> @Model.Email</li>
                    <li><strong>Phone:</strong> @Model.PhoneNumber</li>
                </ul>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mt-3 d-flex gap-3">
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fa fa-trash me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa fa-times me-1"></i> Cancel
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
