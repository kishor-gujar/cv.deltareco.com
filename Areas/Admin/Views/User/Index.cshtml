@using cv.deltareco.com.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" />

<style>
    .dataTables_wrapper {
        width: 100%;
        overflow-x: auto;
    }

    table.dataTable {
        width: 100% !important;
    }

    .page-wrapper {
        transform: none;
    }

    .content {
        transform: none;
    }
</style>

<div class="page-wrapper">
    <div class="content">

        <!-- Page Header -->
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="page-title text-primary fw-bold">User Management</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                    <li class="breadcrumb-item active">Users List</li>
                </ul>
            </div>

            <div>
                <a asp-action="Create" class="btn btn-primary shadow-sm">
                    <i class="fa fa-user-plus me-1"></i> Add New User
                </a>
            </div>
        </div>

        <!-- User Table Card -->
        <div class="card shadow-lg rounded-4" style="backdrop-filter: blur(12px); background: rgba(255,255,255,0.15);">
            <div class="card-body p-4">

                <div class="table-responsive">
                    <table id="usersTable"
                           class="table table-striped table-bordered dt-responsive nowrap w-100">

                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th style="width: 160px;">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>

                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-info dropdown-toggle"
                                                    type="button" data-bs-toggle="dropdown">
                                                <i class="fa fa-cog me-1"></i>
                                            </button>

                                            <ul class="dropdown-menu shadow-sm" style="font-size:12px;">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@user.Id">
                                                        <i class="fa fa-edit me-2"></i> Edit
                                                    </a>
                                                </li>

                                                <li>
                                                    <a class="dropdown-item text-danger"
                                                       asp-action="Delete" asp-route-id="@user.Id"
                                                       onclick="return confirm('Are you sure you want to delete this user?');">
                                                        <i class="fa fa-trash me-2"></i> Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

<script>
    $(document).ready(function () {
        $('#usersTable').DataTable({
            responsive: true,
            pageLength: 10,
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            language: {
                searchPlaceholder: "Search Users...",
                search: ""
            }
        });
    });
</script>
