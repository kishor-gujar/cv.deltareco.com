@using cv.deltareco.com.Models
@model IEnumerable<CandidateCV>

@{
    ViewData["Title"] = "CV List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">

        <!-- Header -->
        <div class="page-header d-flex justify-content-between align-items-center mb-4">
            <div>
                <h3 class="page-title text-primary fw-bold">Candidate's CV List</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                    <li class="breadcrumb-item active">CV List</li>
                </ul>
            </div>

            <div>
                <button class="btn btn-danger me-2" onclick="submitBulkDelete()">
                    <i class="fa fa-trash"></i> Bulk Delete
                </button>

                <button class="btn btn-warning me-2" onclick="submitBulkExtract()">
                    <i class="fa fa-magic"></i> Bulk Extract
                </button>

                <button class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#uploadCVModal">
                    <i class="fa fa-upload me-1"></i> Upload New CV
                </button>
                <button class="btn btn-info me-2" onclick="openOneDrivePicker()">
                    <i class="fa fa-cloud-upload"></i> Import from OneDrive
                </button>

            </div>
        </div>
        <div class="card shadow-lg rounded-4" style="backdrop-filter: blur(12px); background: rgba(255,255,255,0.15);">
            <div class="card-body p-4">

        <!-- Filter Form -->
        <form method="get" class="row g-3 mb-4 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-semibold">From Date</label>
                <input type="date" name="fromDate" class="form-control"
                       value="@ViewData["FromDate"]" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">To Date</label>
                <input type="date" name="toDate" class="form-control"
                       value="@ViewData["ToDate"]" />
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fa fa-filter me-1"></i> Filter
                </button>
            </div>

            <div class="col-md-2">
                <button type="button" class="btn btn-secondary w-100" onclick="clearFilters()">
                    <i class="fa fa-times me-1"></i> Clear Filter
                </button>
            </div>
        </form>
        </div></div>
        <!-- Upload CV Modal -->
        <div class="modal fade" id="uploadCVModal" tabindex="-1" aria-labelledby="uploadCVModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-md modal-dialog-centered">
                <div class="modal-content shadow-lg border-0 rounded-4"
                     style="backdrop-filter: blur(15px); background: rgba(255, 255, 255, 0.7);">

                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title fw-bold text-primary d-flex align-items-center">
                            <i class="fa fa-file-upload me-2"></i> Upload CV
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <form asp-area="Admin" asp-controller="CV" asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="modal-body">

                            <div class="mb-3">
                                <label class="form-label fw-semibold text-dark">Select CV File(s)</label>

                                <div class="input-group">
                                    <span class="input-group-text bg-primary text-white">
                                        <i class="fa fa-paperclip"></i>
                                    </span>
                                    <input type="file" name="CVFiles" id="cvInput"
                                           class="form-control shadow-sm"
                                           multiple accept=".pdf,.doc,.docx" />
                                </div>

                                <small class="text-muted">Allowed: PDF, DOC, DOCX | Max 5MB per file</small>
                                <div id="fileError" class="text-danger small mt-1"></div>
                            </div>

                            <div id="filePreviewContainer" class="mt-2" style="display:none;">
                                <label class="fw-bold text-secondary">Selected Files:</label>
                                <ul id="filePreview" class="list-group small shadow-sm"></ul>
                            </div>

                        </div>

                        <div class="modal-footer border-0">
                            <button type="submit" id="submitBtn" class="btn btn-success px-4 rounded-3 shadow-sm">
                                <i class="fa fa-upload me-1"></i> Upload
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>


        <!-- Bulk Delete Form -->
        <form id="bulkDeleteForm" method="post"
              asp-area="Admin" asp-controller="CV" asp-action="BulkDelete">

            <div class="card shadow-lg rounded-4" style="backdrop-filter: blur(12px); background: rgba(255,255,255,0.15);">
                <div class="card-body p-4">

                    <div class="table-responsive">
                        <table id="cvTable" class="table table-striped table-hover table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th><input type="checkbox" id="selectAll" /></th>
                                    <th>#</th>
                                    <th>File Name</th>
                                    <th>Uploaded On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No CVs uploaded yet.</td>
                                    </tr>
                                }
                                else
                                {
                                    int i = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="rowCheckbox" name="ids" value="@item.Id" />
                                            </td>
                                            <td>@i</td>
                                            <td>@item.FileName</td>
                                            <td>@item.UploadedOn.ToString("dd MMM yyyy, hh:mm tt")</td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                        <i class="fa fa-cog"></i>
                                                    </button>

                                                    <ul class="dropdown-menu shadow-sm" style="font-size:12px;">
                                                        <li>
                                                            <a class="dropdown-item" href="@item.FilePath" target="_blank">
                                                                <i class="fa fa-eye me-2"></i> View
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item"
                                                               asp-area="Admin" asp-controller="CV" asp-action="Extract"
                                                               asp-route-id="@item.Id">
                                                                <i class="fa fa-magic me-2"></i> Extract
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="@item.FilePath" download>
                                                                <i class="fa fa-download me-2"></i> Download
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger"
                                                               asp-area="Admin" asp-controller="CV" asp-action="Delete"
                                                               asp-route-id="@item.Id"
                                                               onclick="return confirm('Are you sure you want to delete this CV?');">
                                                                <i class="fa fa-trash me-2"></i> Delete
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </form>

        <!-- bulk extract form -->
        <form id="bulkExtractForm" method="post"
              asp-area="Admin" asp-controller="CV" asp-action="BulkExtract">
        </form>

    </div>
</div>


@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://js.live.net/v7.2/OneDrive.js"></script>

    <script>
        function openOneDrivePicker() {
            var odOptions = {
                clientId: "YOUR-CLIENT-ID-HERE",
                action: "download",
                multiSelect: true,
                advanced: {
                    filter: ".pdf,.doc,.docx"
                },
                success: function (files) {
                    uploadFromOneDrive(files.value);
                },
                cancel: function () { },
                error: function (e) { alert("OneDrive Error: " + e); }
            };

            OneDrive.open(odOptions);
        }
    </script>
    <script>
        function uploadFromOneDrive(files) {

            let formData = new FormData();

            files.forEach(f => {
                formData.append("OneDriveFiles", f["@@microsoft.graph.downloadUrl"]);
                formData.append("FileNames", f.name);
            });

            fetch("/Admin/CV/ImportFromOneDrive", {
                method: "POST",
                body: formData
            })
            .then(res => res.json())
            .then(result => {
                alert(result.message);
                location.reload();
            })
            .catch(err => alert("Upload failed: " + err));
        }
    </script>

    <script>
        $(document).ready(function () {

            var table = $('#cvTable').DataTable({
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                order: [[3, "desc"]],
                scrollY: "400px",
                scrollX: true,
                scrollCollapse: true,
                responsive: true
            });

            $(document).on("click", "#selectAll", function () {
                $(".rowCheckbox").prop("checked", this.checked);
            });

            $(document).on("click", ".rowCheckbox", function () {
                if (!this.checked) {
                    $("#selectAll").prop("checked", false);
                }
            });

            $(document).on("change", ".rowCheckbox", function () {
                if ($(".rowCheckbox:checked").length === $(".rowCheckbox").length) {
                    $("#selectAll").prop("checked", true);
                }
            });
        });

        function submitBulkDelete() {
            let selected = $('.rowCheckbox:checked').length;

            if (selected === 0) {
                alert("Please select at least one CV to delete.");
                return;
            }

            if (confirm("Are you sure you want to delete selected CV(s)?")) {
                document.getElementById("bulkDeleteForm").submit();
            }
        }

        function submitBulkExtract() {
            let selected = $('.rowCheckbox:checked').length;

            if (selected === 0) {
                alert("Please select at least one CV to extract.");
                return;
            }

            if (confirm("Are you sure you want to extract selected CV(s)?")) {

                let form = document.getElementById("bulkExtractForm");
                form.innerHTML = "";

                $('.rowCheckbox:checked').each(function () {
                    form.innerHTML += `<input type="hidden" name="ids" value="${this.value}" />`;
                });

                form.submit();
            }
        }
    </script>
}
