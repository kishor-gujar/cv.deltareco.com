@model cv.deltareco.com.Models.CandidateProfile
@{
    ViewData["Title"] = "Add Candidate Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-wrapper">
    <div class="content">

        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title text-primary fw-bold">
                        <i class="fa fa-user-plus me-2"></i> Add Candidate Profile
                    </h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="CandidateProfile" asp-action="Index">Candidate Profiles</a></li>
                        <li class="breadcrumb-item active">Add Profile</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0" style="border-radius: 12px;">
            <div class="card-body p-4">

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger py-2"></div>

                    <div class="row g-3">

                        <!-- CV Dropdown -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-file-alt me-1 text-primary"></i> Select CV
                            </label>
                            <select asp-for="CandidateCVId" class="form-select">
                                <option value="">-- Select CV --</option>
                                @foreach (var cv in ViewBag.CVs)
                                {
                                    <option value="@cv.Id">@cv.FileName</option>
                                }
                            </select>
                        </div>

                        <!-- Name -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-user me-1 text-primary"></i> Candidate Name
                            </label>
                            <input asp-for="CandidateName" class="form-control" placeholder="Enter full name" />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-envelope me-1 text-primary"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                        </div>

                        <!-- Mobile -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-phone me-1 text-primary"></i> Mobile
                            </label>
                            <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                        </div>

                        <!-- Education -->
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-graduation-cap me-1 text-primary"></i> Education
                            </label>
                            <textarea asp-for="Education" class="form-control" rows="3" placeholder="Enter education details"></textarea>
                        </div>

                        <!-- Experience -->
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-briefcase me-1 text-primary"></i> Experience
                            </label>
                            <textarea asp-for="Experience" class="form-control" rows="3" placeholder="Enter experience details"></textarea>
                        </div>

                        <!-- Skills -->
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-lightbulb me-1 text-primary"></i> Skills
                            </label>
                            <textarea asp-for="Skills" class="form-control" rows="3" placeholder="Enter key skills"></textarea>
                        </div>

                    </div>

                    <div class="mt-4 d-flex gap-3">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fa fa-save me-1"></i> Save Profile
                        </button>

                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa fa-times me-1"></i> Cancel
                        </a>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
