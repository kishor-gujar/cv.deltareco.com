@model cv.deltareco.com.ViewModels.CandidateCreateViewModel

@{
    ViewData["Title"] = "Add Candidate Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 35px;
        border: none;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        transition: 0.3s;
    }

        .glass-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
        }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #0d6efd;
        margin: 20px 0 10px 0;
        border-left: 4px solid #0d6efd;
        padding-left: 10px;
    }

    .file-upload-box {
        background: #f1f5ff;
        border: 2px dashed #0d6efd;
        border-radius: 12px;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
    }

        .file-upload-box:hover {
            background: #e7efff;
        }

    .form-control, textarea {
        border-radius: 10px !important;
        padding: 10px 14px;
    }

    .btn-lg {
        border-radius: 10px !important;
    }
</style>

<div class="page-wrapper">
    <div class="content">

        <div class="page-header d-flex justify-content-between align-items-center">
            <h3 class="page-title text-primary fw-bold m-0">
                <i class="fa fa-user-plus me-2"></i> Add Candidate Profile
            </h3>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-arrow-left me-1"></i> Back
            </a>
        </div>

        <div class="glass-card mt-4">

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <!-- File Upload Section -->
                <div class="section-title">Upload CV</div>

                <label class="file-upload-box">
                    <i class="fa fa-cloud-upload-alt fa-2x text-primary mb-2"></i>
                    <p class="m-0 fw-semibold text-primary">Click to Upload CV (PDF / DOC / DOCX)</p>
                    <input asp-for="CVFile" type="file" class="d-none" accept=".pdf,.doc,.docx" />
                </label>

                <!-- Personal Information -->
                <div class="section-title">Personal Information</div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Candidate Name</label>
                        <input asp-for="CandidateName" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Mobile</label>
                        <input asp-for="Mobile" class="form-control shadow-sm" />
                    </div>
                </div>

                <!-- Education -->
                <div class="section-title">Education</div>
                <textarea asp-for="Education" rows="3" class="form-control shadow-sm"></textarea>

                <!-- Experience -->
                <div class="section-title">Experience</div>
                <textarea asp-for="Experience" rows="3" class="form-control shadow-sm"></textarea>

                <!-- Skills -->
                <div class="section-title">Skills</div>
                <textarea asp-for="Skills" rows="3" class="form-control shadow-sm"></textarea>

                <!-- Buttons -->
                <div class="mt-4 d-flex gap-3">
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="fa fa-save me-1"></i> Save Profile
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        Cancel
                    </a>
                </div>

            </form>

        </div>

    </div>
</div>
