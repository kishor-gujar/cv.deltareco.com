@model cv.deltareco.com.Models.CandidateProfile
@{
    ViewData["Title"] = "Delete Candidate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-wrapper">
    <div class="content">

        <div class="card shadow-sm border-danger" style="border-radius: 14px;">
            <div class="card-body p-4">

                <h3 class="text-danger fw-bold">
                    <i class="fa fa-trash me-2"></i> Confirm Delete
                </h3>

                <p>Are you sure you want to delete this candidate?</p>

                <ul>
                    <li><strong>Name:</strong> @Model.CandidateName</li>
                    <li><strong>Email:</strong> @Model.Email</li>
                </ul>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-1"></i> Delete
                    </button>

                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        Cancel
                    </a>
                </form>

            </div>
        </div>

    </div>
</div>
