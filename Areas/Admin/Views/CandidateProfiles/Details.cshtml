@model cv.deltareco.com.Models.CandidateProfile
@{
    ViewData["Title"] = "Candidate Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-wrapper">
    <div class="content">

        <div class="page-header">
            <h3 class="page-title fw-bold text-primary">
                <i class="fa fa-file-alt me-2"></i> Candidate Details
            </h3>
        </div>

        <div class="card shadow-sm border-0 p-4" style="border-radius: 14px;">

            <h4 class="text-primary mb-3">@Model.CandidateName</h4>

            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Mobile:</strong> @Model.Mobile</p>

            <p><strong>Education:</strong><br /> @Model.Education</p>
            <p><strong>Experience:</strong><br /> @Model.Experience</p>
            <p><strong>Skills:</strong><br /> @Model.Skills</p>

            <p><strong>CV:</strong></p>

            @if (Model.CandidateCV != null)
            {
                <a href="@Model.CandidateCV.FilePath" target="_blank" class="btn btn-sm btn-primary">
                    <i class="fa fa-file-pdf me-1"></i> View CV
                </a>
            }
            else
            {
                <span class="text-danger">No CV uploaded</span>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fa fa-edit me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    Back to List
                </a>
            </div>

        </div>

    </div>
</div>
