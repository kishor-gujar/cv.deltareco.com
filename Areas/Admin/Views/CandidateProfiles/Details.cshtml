@model cv.deltareco.com.Models.CandidateProfile
@{
    ViewData["Title"] = "Candidate Resume";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .resume-container {
        display: grid;
        grid-template-columns: 300px auto;
        gap: 20px;
        padding: 25px;
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .resume-sidebar {
        padding: 25px;
        background: linear-gradient(135deg, #e8f0ff, #ffffff);
        border-radius: 18px;
        text-align: center;
        border: 1px solid #dce6ff;
    }

        .resume-sidebar h2 {
            font-size: 22px;
            color: #2c4fb3;
            font-weight: 700;
        }

        .resume-sidebar p {
            margin: 8px 0;
            color: #333;
        }

    .resume-content {
        padding: 25px;
        border-radius: 18px;
        border: 1px solid #e9e9e9;
        background: #fafbff;
    }

    .section-title {
        font-size: 20px;
        font-weight: bold;
        color: #2a3f9d;
        margin-bottom: 10px;
        border-left: 4px solid #2a3f9d;
        padding-left: 10px;
    }

    .resume-section {
        margin-bottom: 25px;
    }

    iframe {
        width: 100%;
        height: 600px;
        border-radius: 12px;
        border: 1px solid #ccc;
    }

    @@media(max - width: 900px)

    {
        .resume-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <h3 class="page-title fw-bold text-primary">
                <i class="fa fa-id-card me-2"></i> Candidate Resume View
            </h3>
        </div>

        <div class="resume-container">

            <!-- LEFT SIDEBAR -->
            <div class="resume-sidebar">
                <h2>@Model.CandidateName</h2>

                <p><strong>Email:</strong><br /> @Model.Email</p>
                <p><strong>Mobile:</strong><br /> @Model.Mobile</p>

                <hr />

                @if (Model.CandidateCV != null)
                {
                    <a href="@Model.CandidateCV.FilePath" target="_blank" class="btn btn-primary btn-sm mt-2">
                        <i class="fa fa-download me-1"></i> Download CV
                    </a>
                }
                else
                {
                    <p class="text-danger">No CV uploaded</p>
                }
            </div>

            <!-- RIGHT CONTENT -->
            <div class="resume-content">

                <div class="resume-section">
                    <div class="section-title">Education</div>
                    <p>@Model.Education</p>
                </div>

                <div class="resume-section">
                    <div class="section-title">Experience</div>
                    <p>@Model.Experience</p>
                </div>

                <div class="resume-section">
                    <div class="section-title">Skills</div>
                    <p>@Model.Skills</p>
                </div>

                <!-- PDF PREVIEW -->
                @if (Model.CandidateCV != null && (Model.CandidateCV.FilePath.EndsWith(".pdf")))
                {
                    <div class="resume-section">
                        <div class="section-title">PDF Preview</div>
                        <iframe src="@Model.CandidateCV.FilePath"></iframe>
                    </div>
                }
            </div>

        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fa fa-edit me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>

    </div>
</div>
