@model IEnumerable<cv.deltareco.com.Models.CandidateProfile>

@{
    ViewData["Title"] = "Candidates List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.1/css/responsive.dataTables.min.css" />

<div class="page-wrapper">
    <div class="content">

        <h2 class="mb-3">Candidate Profiles</h2>

        <a asp-action="Create" class="btn btn-success mb-3">+ Add New Candidate</a>

        <div class="table-responsive">
            <table id="candidatesTable" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>CV File</th>
                        <th style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.CandidateName</td>
                            <td>@p.Email</td>
                            <td>@p.Mobile</td>
                            <td>
                                @if (p.CandidateCV != null)
                                {
                                    <a href="@p.CandidateCV.FilePath" class="btn btn-sm btn-primary" target="_blank">
                                        View CV
                                    </a>
                                }
                                else
                                {
                                    <span class="text-danger">No File</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

<script>
    $(document).ready(function () {
        $('#candidatesTable').DataTable({
            responsive: true,
            pageLength: 10,
            lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
            language: {
                searchPlaceholder: "Search Candidates...",
                search: ""
            }
        });
    });
</script>
