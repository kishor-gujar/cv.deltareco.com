@model cv.deltareco.com.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null; /* Remove layout for full-screen form */
}
<!DOCTYPE html>
<html>
<head>
    <title>Register</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(135deg, #1b3673, #FFB901);
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-container {
            width: 420px;
            padding: 40px;
            border-radius: 18px;
            background: rgba(255,255,255,0.20);
            backdrop-filter: blur(12px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.25);
            animation: fadeIn 0.7s ease-in-out;
        }

        .register-title {
            font-size: 35px;
            font-weight: 800;
            text-align: center;
            margin-bottom: 20px;
            color: #fff;
        }

        label {
            font-weight: 600;
            color: #fff;
        }

        .form-control {
            height: 48px;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,0.4);
            background: rgba(255,255,255,0.25);
            color: #fff;
            backdrop-filter: blur(10px);
        }

            .form-control::placeholder {
                color: #f1f1f1;
            }

        .btn-custom {
            background-color: #FFB901;
            color: black;
            font-size: 18px;
            font-weight: 700;
            height: 48px;
            border-radius: 10px;
            border: none;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background-color: #e0a000;
            }

        .glass-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            font-weight: 600;
            color: #fff;
            text-decoration: none;
        }

            .glass-link:hover {
                text-decoration: underline;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

    <div class="register-container">

        <img src="~/ftulogo.jpg" class="mx-auto d-block" style="height:120px; margin-bottom:20px;" />

        <h3 class="register-title">Create Account</h3>

        <form asp-action="Register" method="post">

            <div asp-validation-summary="All" class="text-warning"></div>

            <div class="mb-3">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="FullName" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100">
                Register
            </button>

        </form>

        <a asp-controller="Account" asp-action="Login" class="glass-link">
            Already have an account? Login
        </a>

    </div>

</body>
</html>
